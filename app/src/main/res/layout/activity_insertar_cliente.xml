<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertarCliente">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Cliente"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_margin="25dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tilIdCliente"
        app:startIconDrawable="@drawable/ic_idcliente"
        app:helperText="Requerido"
        style="@style/Base.Widget.MaterialComponents.TextInputLayout.OutLinexBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CÃ³digo del Cliente"
            android:id="@+id/edtIdCliente"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tilNombreCliente"
        app:startIconDrawable="@drawable/ic_nombre"
        app:helperText="Requerido"
        style="@style/Base.Widget.MaterialComponents.TextInputLayout.OutLinexBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Cliente"
            android:id="@+id/edtNombreCliente" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tilApellidoCliente"
        app:startIconDrawable="@drawable/ic_nombre"
        app:helperText="Requerido"
        style="@style/Base.Widget.MaterialComponents.TextInputLayout.OutLinexBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido del Cliente"
            android:id="@+id/edtApellidoCliente"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tilEmailCliente"
        app:startIconDrawable="@drawable/ic_email"
        app:helperText="Requerido"
        style="@style/Base.Widget.MaterialComponents.TextInputLayout.OutLinexBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo del Electronico"
            android:inputType="textEmailAddress"
            android:id="@+id/edtEmailCliente"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tilTelefonoCliente"
        app:counterMaxLength="12"
        app:counterEnabled="true"
        app:startIconDrawable="@drawable/ic_telefono"
        app:helperText="Requerido"
        style="@style/Base.Widget.MaterialComponents.TextInputLayout.OutLinexBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefono"
            android:id="@+id/edtTelefonoCliente"
            android:inputType="phone"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrar"
        android:text="Registrar Cliente"
        android:layout_margin="25dp"
        />
</LinearLayout>